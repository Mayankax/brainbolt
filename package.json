{
  "name": "brainbolt",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=web\" \"npm run dev --workspace=api\"",
    "build": "npm run build --workspace=web && npm run build --workspace=api"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "prisma": "^6.19.2"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2"
  }
}
